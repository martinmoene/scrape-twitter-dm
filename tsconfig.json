{
    "compilerOptions": {
        "module": "esnext",
        "esModuleInterop": true,
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "typescript-js",
        "baseUrl": "typescript",
        "paths": {
            "*": [
                "node_modules/*",
                "typescript/types/*",
                "typescript/*"
            ]
        }
    }
}